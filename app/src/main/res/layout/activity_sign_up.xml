<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp"
    tools:context=".WelcomeActivity">
    <!--ToolBar-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:focusable="true"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal"
            android:theme="@style/AppTheme.ActionBar"
            app:contentInsetStart="0dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sign_up_title"
        android:layout_below="@id/appbar_layout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sign_up_image" />

    <TextView
        android:id="@+id/sign_up_title"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/edit_text_sign_up_account"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_black"
        android:text="Đăng Ký"
        android:textColor="#404040" />

    <EditText
        android:id="@+id/edit_text_sign_up_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/edit_text_sign_up_pass"
        android:layout_marginBottom="20dp"
        android:background="@drawable/search_bar_background"
        android:fontFamily="@font/roboto_reg"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:minHeight="@dimen/search_bar_height"
        android:paddingLeft="20dp"
        android:textColorHint="#787878" />

    <EditText
        android:id="@+id/edit_text_sign_up_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_sign_up"
        android:layout_marginBottom="40dp"
        android:background="@drawable/search_bar_background"
        android:fontFamily="@font/roboto_reg"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:minHeight="@dimen/search_bar_height"
        android:paddingLeft="20dp"
        android:textColorHint="#787878" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_show_pass"
        android:layout_alignEnd="@id/edit_text_sign_up_pass"
        android:layout_alignTop="@id/edit_text_sign_up_pass"
        android:layout_alignBottom="@id/edit_text_sign_up_pass"
        android:layout_marginEnd="10dp"/>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_sign_in_button"
        android:fontFamily="@font/roboto_black"
        android:text="Tiếp tục"
        android:textColor="#fff"
        android:layout_marginBottom="30dp"
        android:textSize="@dimen/search_bar_text_size" />
</RelativeLayout>